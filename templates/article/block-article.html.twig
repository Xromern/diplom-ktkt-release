
<a class="article-container" data-id-article="{{ article.id }}" href="{{ path('article',{'id':article.id}) }}/">

    <div class="article-container-image">
        <img class="image-article" src="{{ asset("images/article/") }}{{ article.image }}" alt="image">
    </div>

    <div class="article-container-text">

        <div class="article-container-text-data">
            <div class="article-container-date"> {{ article.updatedAt|date('Y-m-d h:i') }}</div>
            <div class="article-container-author">admin</div>
        </div>

        <div class="article-container-title">
            {{  article.title}}
        </div>

        <div class="article-container-description">
            {{ article.description|raw }}
        </div>



    </div>
    <div class="article-container-tag">

        {% for category in article.categories %}
          #{{ category }}
        {% endfor %}
    </div>

</a>



